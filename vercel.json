{
  "version": 2,
  "buildCommand": "pnpm build",
  "outputDirectory": "client/dist",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/index.ts": {
      "includeFiles": [
        "drizzle/**/*",
        "server/**/*",
        "shared/**/*"
      ]
    }
  }
}